<Window x:Class="Dreamscene.ControlPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Dynamic Desktop Settings" Height="400" Width="640" ResizeMode="NoResize" Closing="Window_Closing">
    <Grid x:Name="Grirg">
        <Label Content="Preview:" Margin="5,0,0,0"/>
        <Rectangle Width="400" Height="240" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,30,0,0" Fill="Black"/>
        <Label Width="400" Height="240" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,30,0,0" Foreground="White" Content="No preview available" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Image x:Name="preview" Width="400" Height="240" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,30,0,0"/>
        <Label x:Name="URL" Content="C:\" Margin="5,272,0,0"/>
        <Button HorizontalAlignment="Right" VerticalAlignment="Top" Content="Browse" Padding="7,0,8,1" Margin="30,275,10,0" Click="Button_Click"/>
        <ComboBox x:Name="FitDropdown" HorizontalAlignment="Left" Margin="10,300,0,0" VerticalAlignment="Top" Width="130" SelectionChanged="FitDropdown_SelectionChanged">
            <ComboBoxItem Content="Fill"/>
            <ComboBoxItem Content="Fit"/>
            <ComboBoxItem Content="Stretch"/>
            <ComboBoxItem Content="Center"/>
        </ComboBox>
        <CheckBox x:Name="StartupCheckbox" Content="Run at startup" HorizontalAlignment="Right" Margin="0,305,10,0" VerticalAlignment="Top" Checked="StartupCheckbox_Checked" Unchecked="StartupCheckbox_Unchecked"/>
    </Grid>
</Window>
